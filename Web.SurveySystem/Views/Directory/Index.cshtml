@{
    ViewBag.Title = "Справочники / Directories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @if (this.User.IsInRole("manager"))
    {
        <div class="col-12 col-sm-12 col-md-7 col-lg-5 col-xl-4 m-b-5">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <span class="fa fa-tasks"></span>
                    Тесты и анкеты / Tests and Surveys
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "SurveyType")"><span class="fa fa-traffic-light"></span> Типы тестов / Survey Types</a>
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "QuestionType")"><span class="fa fa-question"></span> Варианты ответов на вопрос / Answer types for Questions</a>
                   </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-7 col-lg-5 col-xl-4 m-b-5">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <span class="fa fa-certificate"></span>
                    Критерии и индикаторы / Criterions and indicatiors
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Criterion")"><span class="fa fa-certificate"></span> Критерии / Criterions</a>
                       <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Parameter")"><span class="fa fa-outdent "></span> Показатели и индикаторы / Parameters and indicators</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-5 col-xl-4 m-b-5">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <span class="fa fa-users"></span> Сотрудники / Employees
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "User")"><span class="fa fa-users"></span> Пользователи / Users</a>
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Role")"><span class="fa fa-users"></span> Роли / Roles</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-8 col-lg-9 col-xl-4 m-b-5">
            <div class="card border-secondary">
                <div class="card-header bg-secondary text-white">
                    <span class="fa fa-envelope"></span> Уведомления / Notifications
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Notification")"><i class="fa fa-wrench"></i> Уведомления / Notifications</a>
                       <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "NotificationType")"><i class="fa fa-wrench"></i> Типы уведомлений / Notification types</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-9 col-lg-5 col-xl-4 m-b-5">
            <div class="card border-secondary">
                <div class="card-header bg-info text-white">
                    <span class="fa fa-question-circle"></span> Инструкции / Manuals
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Instruction")"><i class="fa fa-question-circle"></i> Инструкции / Manuals</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (this.User.IsInRole("admin"))
    {
        <div class="col-12 col-sm-12 col-md-7 col-lg-5 col-xl-4 m-b-5">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <span class="fa fa-tasks"></span>
                    Тесты и анкеты / Tests and Surveys
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "SurveyType")"><span class="fa fa-traffic-light"></span> Типы тестов / Survey Types</a>
                  
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "QuestionType")"><span class="fa fa-question"></span> Варианты ответов на вопрос / Answer types for Questions</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-7 col-lg-5 col-xl-4 m-b-5">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <span class="fa fa-certificate"></span>
                    Критерии и индикаторы / Criterions and indicatiors
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Criterion")"><span class="fa fa-certificate"></span> Критерии / Criterions</a>
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Parameter")"><span class="fa fa-outdent"></span> Показатели и индикаторы / Parameters and indicators</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-5 col-xl-4 m-b-5">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <span class="fa fa-users"></span> Сотрудники / Employees
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "User")"><span class="fa fa-users"></span> Пользователи / Users</a>
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Role")"><span class="fa fa-users"></span> Роли / Roles</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-8 col-lg-9 col-xl-4 m-b-5">
            <div class="card border-secondary">
                <div class="card-header bg-secondary text-white">
                    <span class="fa fa-envelope"></span> Уведомления / Notifications
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Notification")"><i class="fa fa-bell"></i> Уведомления / Notifications</a>
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "NotificationType")"><i class="fa fa-flag"></i> Типы уведомлений / Notification types</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 m-b-5">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <span class="fa fa-exclamation-circle"></span> Служебные / Service
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Setting")"><i class="fa fa-cog"></i> Настройки / Settings</a>
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Report")"><i class="fa fa-flag"></i> Отчеты / Reports</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-8 col-lg-9 col-xl-4 m-b-5">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <span class="fa fa-question-circle"></span> Инструкции / Manuals
                </div>
                <div class="card-body p-1">
                    <div class="form-group mb-0">
                        <a class="dropdown-item" onmouseover="this.style.backgroundColor = '#cae2fc'" onmouseout="this.style.backgroundColor = ''" href="@Url.Action("Index", "Instruction")"><i class="fa fa-info-circle"></i> Инструкции / Manuals</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>