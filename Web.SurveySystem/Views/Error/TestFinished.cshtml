@using Web.SurveySystem.Helpers

@{
    ViewBag.Title = "Тест был пройден / Test was completed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Request.IsAuthenticated)
{
    @*<h4 class="text-danger">Уважаемый(ая) @User.Identity.Name / Dear @User.Identity.Name</h4>*@
    <div class="row" style="padding: 15px 5px 5px 5px;">
        <div class="col">
            <div class="card col-12 border-warning">
                <div class="card-body">
                    <div class="clearfix">
                        <h5>Уважаемый(ая) / Dear @User.GetFullName()</h5>
                        <h6>Вы уже проходили этот тест / The test was already completed</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg"><i class="fa fa-home" aria-hidden="true"></i> Домой / Home </a>
            <a href="@Url.Action("Index", "Invitation")" class="btn btn-success btn-lg"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i> Мои тесты / My tests </a>
        </div>
    </div>
}
