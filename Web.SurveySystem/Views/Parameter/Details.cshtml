@{
    ViewBag.Title = "Показатель / Parameter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script>
        window.ParameterId = '@(ViewBag.ParameterId)';
        window.CriterionId = '@(ViewBag.CriterionId)';
        window.CurrentUserId = '@(ViewBag.CurrentUserId)';
        window.TabPId = '@(ViewBag.TabPId)';
    </script>
    @Scripts.Render("~/Scripts/app/parameter/parameter.details.js")
    @Scripts.Render("~/Scripts/app/parameter/parameter.ind.grid.js")
}

    <div class="row" style="padding: 5px 10px;">
            <div class="form-group col-12 col-sm-12 ml-2">
                <a href="@Url.Action("Index", "Parameter")" class="btn btn-primary btn-sm" title="Вернуться / Backwards"><span class="fa fa-reply"></span> К списку показателей / Back to parameters</a>
            </div>
            <div class="form-group col-12 col-sm-12 col-xl-3 col-md-6">
                <label class="font-weight-bold">Критерий / Criterion</label>
                <input class="form-control" style="min-width: 100%" disabled id="criterionName" placeholder="Критерий / Criterion" />
            </div>
            <div class="form-group col-12 col-sm-12 col-xl-4 col-md-6">
                <label class="font-weight-bold">Показатель / Parameter</label>
                <input class="form-control" style="min-width: 100%" disabled id="paramName" placeholder="Показатель / Parameter" />
            </div>
        </div>
        <div class="form-group col-12" id="divtabIndicators">
            <div id="tabIndic">
                <ul>
                    <li>Индикаторы / Indicators <span id="countIndicators" class="badge badge-secondary badge-pill mr-1 ml-1" style="float: right;">0</span></li>
                </ul>
                <div id="tabIndicators">
                    <div id="gridIndicators" class="mt-3"></div>
                </div>
            </div>
        </div>